<configuration>
    　　　
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4relative [%thread] %-5level [%logger{35}] - %msg %n</pattern>
        </encoder>
    </appender>

    　　　 <!-- 正确的方式：使用 logger 标签来设置包的日志级别 -->
    <logger name="com.jim.interceptor" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>